#!/usr/bin/env php
<?php

declare(strict_types=1);

use S\Foundation\Application;
use S\Cli\Context;

require_once __DIR__.'/bootstrap.php';

$app = new Application(Context::global($argc, $argv));

$app->on('hello [name]', fn (string $name) => 'Hello '.($name ?: 'World').'!'.PHP_EOL);

$app->run();
