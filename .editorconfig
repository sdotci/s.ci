root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
quote_type = single
max_line_length = off

[*.json]
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false

[*.{sh,bash,yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
